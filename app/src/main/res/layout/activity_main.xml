<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    /

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="How are you feeling today?"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.356" />

    <com.example.bangit_emotilog.EmoticonLogButton
        android:id="@+id/happyButton"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_marginEnd="8dp"
        android:text="😁"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tiredButton"
        app:layout_constraintTop_toTopOf="parent" />

    <com.example.bangit_emotilog.EmoticonLogButton
        android:id="@+id/sadButton"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_marginEnd="8dp"
        android:text="😔"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/happyButton"
        app:layout_constraintTop_toTopOf="parent" />

    <com.example.bangit_emotilog.EmoticonLogButton
        android:id="@+id/angryButton"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_marginEnd="36dp"
        android:text="😡"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.example.bangit_emotilog.EmoticonLogButton
        android:id="@+id/tiredButton"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_marginEnd="12dp"
        android:text="😴"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/angryButton"
        app:layout_constraintTop_toTopOf="parent" />


    <com.example.bangit_emotilog.EmoticonLogButton
        android:id="@+id/shockedButton"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="260dp"
        android:text="😮"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.example.bangit_emotilog.EmoticonLogButton
        android:id="@+id/celebrationButton"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="260dp"
        android:text="🥳"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/happyButton" />

    <com.example.bangit_emotilog.EmoticonLogButton
        android:id="@+id/sickButton"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="260dp"
        android:text="🤢"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/sadButton" />

    <com.example.bangit_emotilog.EmoticonLogButton
        android:id="@+id/boredButton"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="260dp"
        android:text="🥱"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/sickButton" />


    <com.example.bangit_emotilog.EmoticonLogButton
        android:id="@+id/gratefulButton"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:text="🤗"
        android:textSize="30sp"
        tools:layout_editor_absoluteX="26dp"
        tools:layout_editor_absoluteY="491dp" />

    <Button
        android:id="@+id/summaryButton"
        android:layout_width="190dp"
        android:layout_height="60dp"
        android:layout_marginStart="8dp"
        android:text="View Summary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/viewLogButton"
        android:layout_width="190dp"
        android:layout_height="60dp"
        android:layout_marginEnd="8dp"
        android:text="View Logs"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    >

</androidx.constraintlayout.widget.ConstraintLayout>